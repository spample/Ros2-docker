

{
  // Logo settings (uses your custom emblem)
  "logo": {
    "type": "file",
    "source": "/root/.config/fastfetch/ascii.txt",
    "color": {
      "1": "blue"
    },
    "padding": {
      "top": 1
    }
  },

  // Display formatting
  "display": {
    "separator": " 󰑃  " // Icon to separate keys from values
