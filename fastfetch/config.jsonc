    { "type": "wmtheme",      "key": "│ ┌󰉼 Theme",      "keyColor": "blue" },
    { "type": "icons",        "key": "│ ├󰀻 Icons",      "keyColor": "blue" },
    { "type": "terminalfont", "key": "│ ├🗚 Term Font",   "keyColor": "blue" },
    { "type": "terminal",     "key": "│ ├ Terminal",   "keyColor": "blue" },
    { "type": "command",      "key": "│ ├ Git User",   "keyColor": "blue",   "text": "git config --global user.name || echo 'N/A'"},
    { "type": "command",      "key": "│ └ Website",      "keyColor": "blue",   "text": "echo https://spample.github.io/"},

    "break",

    // 🧠 Hardware Info
    { "type": "host",       "key": "󰌢 SYSTEM",          "keyColor": "green" },

    { "type": "cpu",        "key": "│ ┌󰻠 CPU",           "keyColor": "green" },
    { "type": "gpu",        "key": "│ ├󰻑 GPU",           "format": "{2}",        "keyColor": "green" },
    { "type": "display",    "key": "│ ├󰍹 Display",       "keyColor": "green",    "compactType": "original-with-refresh-rate" },
    { "type": "memory",     "key": "│ ├󰾆 Memory",        "keyColor": "green" },
    { "type": "uptime",     "key": "│ ├ Uptime",        "keyColor": "green" },
    { "type": "command",    "key": "│ ├󰓡 IP",            "keyColor": "green",     "text": "hostname -I | awk '{print $1}'"},
